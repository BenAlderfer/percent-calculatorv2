<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
		Default is the green theme
    -->
    <style name="AppBaseTheme" parent="GreenLight">
    </style>

    <!-- Application theme, default is the green theme -->
    <style name="AppTheme" parent="GreenLight">
    </style>
	
	<!-- Style for EditText error text -->
	<style name="ErrorText" parent="TextAppearance.AppCompat.Small">
		<item name="android:textStyle">bold|italic</item>
		<item name="android:textColor">@color/greenPrimary</item>
	</style>
	
	<!-- Black and White theme, same for all activities -->
	<style name="EditTextBlack" parent="@android:style/Widget.EditText">
		<item name="android:textColor">@color/blackPrimary</item>
	</style>
	
	<style name="BlackAndWhite" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorAccent">@color/blackPrimary</item>
		<!-- checkboxes and text fields border-->
		<item name="android:textColorPrimary">@color/white </item> <!-- activity name text color -->
		<item name="android:textColor">@color/blackPrimary</item>
		<!-- TextView color -->
		<item name="android:editTextStyle">@style/EditTextBlack</item> <!-- EditText color -->
		<item name="android:actionMenuTextColor">@color/white</item>  <!-- Action button color -->
	</style>
	
	<style name="BlackAndWhitePopUp" parent="Theme.AppCompat.Dialog">
		<item name="colorAccent">@color/blackPrimary</item>
		<!-- checkboxes and text fields border-->
