<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NormalText">
        <item name="android:textSize">@dimen/normal_tx_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/medium_tx_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">@dimen/large_tx_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for EditText error text -->
    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/greenPrimary</item>
    </style>

    <style name="EditTextBlack" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/blackPrimary</item>
    </style>

    <style name="greenEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/greenPrimary</item>
    </style>

    <style name="orangeEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/orangePrimary</item>
    </style>

    <style name="redEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/redPrimary</item>
    </style>

    <style name="blueEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/bluePrimary</item>
    </style>

    <style name="BaseButton" parent="@style/NormalText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="GreenButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="OrangeButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_orange</item>
    </style>

    <style name="RedButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <style name="BlueButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="BlackButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_black</item>
    </style>
</resources>