<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alderferstudios.percentcalculatorv2" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.OneItemActivity"
            android:label="@string/title_activity_one_item"
            android:theme="@style/GreenLight">
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_prefs"
            android:noHistory="true"
            android:theme="@style/GreenLight" >
        </activity>
        <activity
            android:name=".activity.CombinedActivity"
            android:label="@string/app_name"
            android:theme="@style/GreenLight" >
        </activity>
        <activity
            android:name=".Launcher"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".widget.SplitPopUp"
            android:label="@string/title_split_pop_up"
            android:theme="@style/GreenLightPopUp">
        </activity>
        <activity
            android:name=".widget.PercentLimitPopUp"
            android:label="@string/title_percent_limit_pop_up"
            android:theme="@style/GreenLightPopUp" />
    </application>

</manifest>
